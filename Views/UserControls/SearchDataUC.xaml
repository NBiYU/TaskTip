<UserControl x:Class="TaskTip.Views.UserControls.SearchDataUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TaskTip.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Height="100" Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.9*"/>
            <ColumnDefinition Width="0.1*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="SearchText" Background="Transparent" Grid.Column="0" Text=""></TextBox>
        <Button x:Name="SearchClick" Click="SearchClick_Click" Background="Transparent" BorderThickness="0" Grid.Column="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">搜索</Button>
    </Grid>
</UserControl>
