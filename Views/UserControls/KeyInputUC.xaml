<UserControl x:Class="TaskTip.Views.UserControls.KeyInputUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TaskTip.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid MaxHeight="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="0.3*"/>
            <ColumnDefinition Width="0.2*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0" x:Name="HotKeyName" VerticalAlignment="Center" Text="最小化" Margin="10,0,0,0"></TextBlock>
        <TextBox Grid.Column="1" VerticalAlignment="Center" x:Name="CombineKey" PreviewKeyDown="InputKeys_PreviewKeyDown" 
                 Background="DarkGray" IsReadOnly="True" AcceptsReturn="False" AcceptsTab="False" ></TextBox>
        <Image Grid.Column="2"></Image>
    </Grid>
    
</UserControl>
