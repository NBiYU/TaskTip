<UserControl x:Class="TaskTip.Views.UserControls.ThemeSelectorUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TaskTip.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="Transparent" x:Name="ThemeSelectUCGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0" x:Name="CategoryNameText" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0" Text="样式位置名称"></TextBlock>
        <Button Grid.Column="1" x:Name="ColorSelector" Margin="0,0,10,0" Click="ColorSelector_OnClick" Width="100"></Button>
    </Grid>
</UserControl>
